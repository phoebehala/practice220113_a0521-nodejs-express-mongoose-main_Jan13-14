<%- include('../includes/head.ejs') %>
<body>
    <%- include('../includes/nav.ejs') %>

    <main class="container mt-6">
        <h1 class="title">Admin Page</h1>

        <% if(products.length > 0) { %>
            <div class="columns is-4 m-4">
                <% for(let product of products) { %>
                    <div class="column is-one-quarter">
                        <div class="card">
                            <div class="card-image">
                                <figure class="image is-4by3">    
                                    <img src="http://localhost:8000/<%= product.imageUrl %>" alt="<%= product.title%>" width="100px" /> 
                                </figure>
                            </div>
                            <div class="card-content">
                                <div class="media">
                                    <div class="media-left">
                                        <div class="media-content">
                                            <p class="title is-4"><%= product.title%></p>
                                            <p class="subtitle is-6">$<%= product.price %></p>
                                        </div>
                                    </div>
                                </div>
                        
                                <div class="content">
                                    <% if(product.description.length >= 25) { %>
                                        <%= product.description.slice(0, 25).concat('...') %>
                                    <% }else{ %>
                                        <%= product.description %>
                                    <% } %>
                                </div>
                            </div>
                            <footer class="card-footer">
                                <a class="card-footer-item" href="/products/<%= product._id %>" >Details</a>

                                <!-- only for admins to see -->
                                <a class="card-footer-item" href="/admin/edit-product/<%= product._id %>?edit=true">Edit</a>
                                <form action="/admin/delete-product" method="POST">
                                    <input type="hidden" name="productId" value="<%= product._id %>" />
                                    <a class="card-footer-item" href="#" onclick="this.closest('form').submit();return false;">Delete</a>              
                                    <!-- <button class="card-footer-item" type="submit">Delete</button> -->
                                </form>
                                <!-- only for admins to see -->
                            </footer>
                        </div>
                    </div>
                <% } %>
            </div>
        <% } else { %>
            <h1 class="title">No Products Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>